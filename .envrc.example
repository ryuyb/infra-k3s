# Copy to .envrc.local and fill in values
# Run `direnv allow` after editing

# GitOps
export GIT_REPO_URL="https://github.com/YOUR_USERNAME/infra-k3s.git"

# Cloudflare
export CLOUDFLARE_API_TOKEN=""
export CLOUDFLARE_ACCOUNT_ID=""
export CLOUDFLARE_ZONE_ID=""

# ACME / Let's Encrypt
export ACME_EMAIL="admin@example.com"
export DOMAIN="example.com"

# Velero / R2 Backup
export VELERO_BUCKET="k3s-backups"
export R2_ENDPOINT="https://ACCOUNT_ID.r2.cloudflarestorage.com"

# PostgreSQL
export POSTGRES_PASSWORD="postgres"

# pgAdmin4
export PGADMIN_EMAIL="admin@example.com"

# ArgoCD OIDC Configuration
# Set ARGOCD_OIDC_ENABLED=true to enable OIDC authentication
export ARGOCD_OIDC_ENABLED="false"
# OIDC Issuer URL (e.g., https://auth.example.com)
export ARGOCD_OIDC_ISSUER_URL=""
# OIDC Client ID (from ZITADEL)
export ARGOCD_OIDC_CLIENT_ID=""
# OIDC Client Secret (from ZITADEL)
export ARGOCD_OIDC_CLIENT_SECRET=""
# OIDC Logout URL
export ARGOCD_OIDC_LOGOUT_URL="https://auth.example.com/oidc/v1/end_session"
